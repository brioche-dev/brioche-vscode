{
  "name": "brioche-vscode",
  "displayName": "Brioche",
  "publisher": "brioche-dev",
  "description": "Official extension for Brioche, a delicious package manager",
  "icon": "./images/brioche-logo.png",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/brioche-dev/brioche-vscode.git"
  },
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.bri"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "brioche-vscode.restartLsp",
        "title": "Brioche LSP: Restart LSP Server"
      },
      {
        "command": "brioche-vscode.runBriocheBuild",
        "title": "Brioche: Build Project"
      }
    ],
    "configuration": {
      "title": "Brioche",
      "properties": {
        "brioche.binaryPath": {
          "description": "Path to the Brioche binary. Leave empty to use Brioche from PATH.",
          "type": "string",
          "default": ""
        },
        "brioche.envVars": {
          "description": "Extra environment variables to set for the Brioche LSP server.",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        },
        "brioche.log.level": {
          "type": "string",
          "enum": [
            "off",
            "error",
            "warn",
            "info",
            "debug",
            "trace"
          ],
          "default": "off",
          "description": "Log level for the Brioche language server."
        }
      }
    },
    "languages": [
      {
        "id": "brioche",
        "aliases": [
          "Brioche TypeScript",
          "Brioche",
          "brioche"
        ],
        "extensions": [
          ".bri"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/brioche-file-icon-light.svg",
          "dark": "./images/brioche-file-icon-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "brioche",
        "scopeName": "source.ts",
        "path": "./syntaxes/brioche-typescript.tmLanguage.json"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "brioche-vscode.restartLsp",
          "when": "editorLangId == brioche"
        }
      ],
      "editor/context": [
        {
          "when": "editorLangId == brioche",
          "command": "brioche-vscode.restartLsp",
          "group": "brioche"
        }
      ]
    }
  },
  "scripts": {
    "package": "vsce package",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "fmt": "prettier --write src/**/*.ts",
    "lint": "eslint",
    "test": "vscode-test"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.13.8",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.21.0",
    "prettier": "^3.5.2",
    "typescript": "^5.7.3"
  }
}